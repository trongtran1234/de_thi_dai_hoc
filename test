add_trans.constraint_mode (0);

//Create case by case with uvm_create
`uvm_create(add_trans)
 add_trans.P0_REQ = 1;
 add_trans.P1_REQ = 0;
 add_trans.P2_REQ = 0;
 add_trans.P3_REQ = 0;
`uvm_send(add_trans)
                  
`uvm_create(add_trans)
 add_trans.P0_REQ = 0;
 add_trans.P1_REQ = 1;
 add_trans.P2_REQ = 1;
 add_trans.P3_REQ = 1;
`uvm_send(add_trans)

`uvm_create(add_trans)
